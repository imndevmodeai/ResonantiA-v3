# ArchE System Environment Configuration Template
# Copy this file to .env and fill in your actual values
# Ports are dynamically assigned - leave empty for auto-detection

# Google Gemini API Configuration (Required for PTRF and LLM operations)
GEMINI_API_KEY=your_gemini_api_key_here

# Alternative Google API Key (if using different Google services)
GOOGLE_API_KEY=your_google_api_key_here

# System Configuration
ARCHE_ENVIRONMENT=development
ARCHE_LOG_LEVEL=INFO
ARCHE_DEBUG_MODE=false

# ArchE Backend Server Configuration
# Auto-detected or dynamically assigned by startup script
ARCHE_PORT=
ARCHE_HOST=localhost

# WebSocket Server Configuration
# Auto-detected or dynamically assigned by startup script
WEBSOCKET_PORT=
WEBSOCKET_HOST=localhost

# Next.js Frontend Configuration
# Auto-detected or dynamically assigned by startup script
NEXTJS_PORT=
NEXTJS_HOST=localhost

# Database Configuration (if applicable)
DATABASE_URL=your_database_url_here

# External API Keys (add as needed)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Security Configuration
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# File Paths (relative to project root)
KNOWLEDGE_GRAPH_PATH=knowledge_graph/
WORKFLOWS_PATH=workflows/
CHRONICLES_PATH=chronicles/

# Performance Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30000
MEMORY_LIMIT=1024

# Development Configuration
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_LOGGING=false
ENABLE_PERFORMANCE_MONITORING=false 