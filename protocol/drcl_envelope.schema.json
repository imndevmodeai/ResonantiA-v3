{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://resonantia.local/schemas/drcl_envelope.schema.json",
  "title": "DRCL Envelope",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "archE_meta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["protocol", "interaction_id", "phase"],
      "properties": {
        "protocol": { "type": "string", "const": "DRCL.v1" },
        "interaction_id": { "type": "string", "minLength": 1 },
        "phase": {
          "type": "string",
          "enum": [
            "intent",
            "map",
            "audit",
            "critique",
            "envision",
            "reforge",
            "sync",
            "execute"
          ]
        },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "issues": { "type": "array", "items": { "type": "string" } },
        "depends_on": { "type": "array", "items": { "type": "string" } }
      }
    },
    "conceptual_map": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "sprs": { "type": "array", "items": { "type": "string" } },
        "abstract_workflow": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["step", "name"],
            "properties": {
              "step": { "type": "integer", "minimum": 1 },
              "name": { "type": "string" },
              "summary": { "type": "string" }
            }
          }
        },
        "territory_assumptions": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["path"],
            "properties": {
              "path": { "type": "string" },
              "must_exist": { "type": "boolean" }
            }
          }
        }
      }
    },
    "dissonance_report": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "missing": { "type": "array", "items": { "type": "string" } },
        "mismatch": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["path", "expected", "actual"],
            "properties": {
              "path": { "type": "string" },
              "expected": { "type": "string" },
              "actual": { "type": "string" }
            }
          }
        }
      }
    },
    "correction_plan": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["action", "path"],
        "properties": {
          "action": { "type": "string", "enum": ["create", "update", "remove"] },
          "path": { "type": "string" },
          "content": { "type": ["string", "null"] },
          "acceptance": { "type": "array", "items": { "type": "string" } },
          "rollback": { "type": "string" }
        }
      }
    },
    "synced_blueprint": {
      "type": "object",
      "additionalProperties": false,
      "required": ["workflow"],
      "properties": {
        "workflow": { "type": "string" },
        "inputs": { "type": ["object", "null"] },
        "post_checks": { "type": "array", "items": { "type": "string" } }
      }
    },
    "iar": {
      "type": "object",
      "additionalProperties": false,
      "required": ["status"],
      "properties": {
        "status": { "type": "string", "enum": ["ok", "warn", "fail"] },
        "notes": { "type": "string" }
      }
    },
    "rise": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mode"],
      "properties": {
        "mode": { "type": "string", "enum": ["embedded", "parallel", "separate"] },
        "reason": { "type": "string" },
        "outline": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["phase"],
            "properties": {
              "phase": { "type": "string", "enum": ["scaffold", "insight", "synthesis"] },
              "steps": { "type": "array", "items": { "type": "string" } }
            }
          }
        }
      }
    }
  },
  "required": ["archE_meta", "iar"]
}
